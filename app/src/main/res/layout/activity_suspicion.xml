<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chengen.one.Suspicion"
    android:background="#303030"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/etSuspLocDes"
        android:textSize="18sp"
        android:singleLine="true"
        android:textColor="#FFFF"
        android:background="@drawable/oneline"
        android:layout_below="@+id/etSusp"
                android:gravity="center_vertical"
        android:textAlignment="gravity"
                android:layout_alignParentStart="true" />

            <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etSusp"
        android:gravity="center_vertical|start"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:background="@drawable/twolines"
        android:textColor="#FFFF"
                android:textAlignment="gravity"
                android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/etSuspURL"
        android:textSize="18sp"
        android:singleLine="true"
        android:textColor="#FFFF"
        android:background="@drawable/oneline"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:layout_below="@+id/ibSuspMap"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
     <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Submit"
        android:id="@+id/btnSusp"
        android:textSize="22sp"
        android:textColor="#FFFF"
        android:background="@drawable/ripple_effect"
         android:layout_below="@+id/linearLayout5"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="35dp"
         android:layout_marginBottom="25dp" />
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/ibSuspMap"
                android:background="@drawable/marker"
                android:layout_alignBottom="@+id/etSuspLocDes"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp" />
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="3"
        android:layout_below="@+id/etSuspURL"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/linearLayout5">
       <ImageView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:id="@+id/ivSuspPic1"
           android:background="@drawable/newboarderofphoto" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/ivSuspPic2"
        android:background="@drawable/newboarderofphoto"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/ivSuspPic3"
        android:background="@drawable/newboarderofphoto"
        android:layout_marginLeft="5dp" />
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

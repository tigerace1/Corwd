<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chengen.one.Suspicion"
    android:background="#303030">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Suspicion"
        android:id="@+id/textView17"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:layout_marginLeft="80dp"
        android:textColor="#52f44e"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/etSuspLocDes"
        android:textSize="18sp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:textColor="#FFFF"
        android:background="@drawable/oneline"
        android:layout_below="@+id/etSusp"
        android:layout_alignStart="@+id/etSuspURL"
        android:gravity="center_vertical"
        android:textAlignment="gravity" />

            <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etSusp"
        android:gravity="center_vertical|start"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:background="@drawable/twolines"
        android:textColor="#FFFF"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/textView17"
                android:textAlignment="gravity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/etSuspURL"
        android:textSize="18sp"
        android:singleLine="true"
        android:textColor="#FFFF"
        android:background="@drawable/oneline"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:layout_below="@+id/ibSuspMap"
        android:layout_alignEnd="@+id/ibSuspMap" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivSuspPic1"
        android:background="@drawable/photoboarder"
        android:layout_below="@+id/etSuspURL"
        android:layout_alignStart="@+id/etSuspURL"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Submit"
        android:id="@+id/btnSusp"
        android:textSize="22sp"
        android:textColor="#FFFF"
        android:background="@drawable/ripple_effect"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/ivSuspPic1"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:id="@+id/ibSuspMap"
        android:layout_alignTop="@+id/etSuspLocDes"
        android:layout_alignParentEnd="true"
        android:background="@drawable/map"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp" />

            <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivSuspPic2"
        android:background="@drawable/photoboarder"
                android:layout_marginLeft="15dp"
                android:layout_above="@+id/btnSusp"
                android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivSuspPic3"
        android:background="@drawable/photoboarder"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/ivSuspPic2"
        android:layout_alignEnd="@+id/ibSuspMap" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

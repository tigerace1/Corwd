<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.chengen.crowdsafes.SignUpPage"
    android:background="#303030">
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <EditText
              android:layout_width="fill_parent"
              android:layout_height="45dp"
              android:id="@+id/etFirstName"
              android:textColor="#FFFF"
              android:singleLine="true"
              android:textSize="18sp"
              android:gravity="center_vertical|start"
              android:background="@drawable/twolines"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="35dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:textAlignment="gravity" />

          <EditText
              android:layout_width="wrap_content"
              android:layout_height="45dp"
              android:id="@+id/etLastName"
              android:layout_alignParentEnd="true"
              android:layout_alignStart="@+id/etFirstName"
              android:layout_marginRight="15sp"
              android:textColor="#FFFF"
              android:singleLine="true"
              android:textSize="18sp"
              android:layout_below="@+id/etFirstName"
              android:gravity="center_vertical|start"
              android:background="@drawable/oneline"
              android:textAlignment="gravity" />

          <EditText
              android:layout_width="wrap_content"
              android:layout_height="45dp"
              android:id="@+id/etEmail"
              android:layout_below="@+id/etLastName"
              android:layout_alignParentEnd="true"
              android:layout_marginRight="15sp"
              android:textColor="#FFFF"
              android:singleLine="true"
              android:textSize="18sp"
              android:layout_alignParentStart="true"
              android:layout_marginLeft="15dp"
              android:gravity="center_vertical|start"
              android:background="@drawable/oneline"
              android:textAlignment="gravity" />

          <EditText
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:inputType="textPassword"
             android:ems="10"
             android:id="@+id/etSignUpRePass"
             android:layout_marginRight="15sp"
             android:layout_marginLeft="15sp"
             android:textColor="#FFFF"
             android:singleLine="true"
             android:textSize="18sp"
             android:gravity="center_vertical|start"
             android:background="@drawable/oneline"
             android:textAlignment="gravity"
             android:layout_below="@+id/etSignUpPass"
             android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etSignUpPass"
        android:textColor="#FFFF"
        android:singleLine="true"
        android:textSize="18sp"
        android:gravity="center_vertical|start"
        android:background="@drawable/oneline"
        android:textAlignment="gravity"
        android:layout_below="@+id/etEmail"
        android:layout_alignEnd="@+id/etEmail"
        android:layout_marginLeft="15dp" />

          <Button
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:text="@string/signup"
              android:id="@+id/btnSignUp"
              android:textSize="22sp"
              android:background="@drawable/ripple_effect"
              android:layout_marginLeft="10dp"
              android:textColor="#FFFF"
              android:layout_marginRight="25dp"
              android:layout_below="@+id/etSignUpRePass"
              android:layout_alignStart="@+id/etEmail"
              android:layout_marginTop="15dp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:text="Have an acount?"
              android:id="@+id/textView18"
              android:layout_marginLeft="50dp"
              android:textColor="#FFFF"
              android:textSize="18sp"
              android:layout_below="@+id/btnSignUp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text="Sign in"
              android:id="@+id/tvSignIn"
              android:textColor="#FFFF"
              android:textStyle="bold"
              android:textSize="20sp"
              android:layout_marginLeft="5dp"
              android:layout_alignTop="@+id/textView18"
              android:layout_toEndOf="@+id/textView18"
              android:layout_marginBottom="10dp" />

      </RelativeLayout>
  </ScrollView>

</RelativeLayout>
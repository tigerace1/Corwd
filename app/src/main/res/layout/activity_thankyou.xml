<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chengen.crowdsafetyalerts.Thankyou"
    android:background="@drawable/yellowbackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Success! Thank you for choosing our program, and have a nice day!"
        android:id="@+id/textView2"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/ibHome"
        android:background="@drawable/gohomeicon"
        android:layout_above="@+id/textView19"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Home Page"
        android:id="@+id/textView19"
        android:textColor="#f8fa5b17"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:background="@drawable/crowdsafelogo"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentStart="true" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    tools:context="com.example.chengen.one.Aggression">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/textView10"
        android:textColor="#FFFF"
  android:textSize="26sp"
  android:text="Situation:"
  android:layout_weight="0.05"
        android:layout_below="@+id/textView9"
        android:layout_marginLeft="15dp" />

    <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textAppearance="?android:attr/textAppearanceLarge"
  android:text="  Aggression"
  android:id="@+id/textView9"
  android:textColor="#FFFF"
  android:textSize="48sp"
        android:textAlignment="textStart"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etAgg"
        android:textSize="20sp"
        android:layout_below="@+id/textView10"
        android:gravity="start|top"
        android:background="@drawable/newpanel"
        android:textColor="#FFFF"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Submit"
        android:id="@+id/btnAgg"
        android:textSize="30sp"
        android:textColor="#FFFF"
        android:background="@drawable/newpanel"
        android:clickable="true"
        android:layout_below="@+id/etAggLocDes"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/etAggURL"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFF"
        android:singleLine="true"
        android:layout_below="@+id/etAgg"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/newpanel"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivAggPic1"
        android:background="@drawable/photoboarder"
        android:layout_marginTop="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etAgg"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivAggPic3"
        android:background="@drawable/photoboarder"
        android:layout_alignTop="@+id/ivAggPic2"
        android:layout_toEndOf="@+id/ivAggPic2"
        android:layout_marginLeft="15dp" />

    <EditText
        android:layout_width="241dp"
        android:layout_height="40dp"
        android:id="@+id/etAggLocDes"
        android:textSize="20sp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/ibAggMap"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ibAggMap"
        android:textColor="#FFFF"
        android:singleLine="true"
        android:layout_alignTop="@+id/ibAggMap"
        android:background="@drawable/newpanel"
        android:layout_marginLeft="15dp" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:id="@+id/ibAggMap"
        android:background="@drawable/map"
        android:layout_below="@+id/ivAggPic3"
        android:layout_alignEnd="@+id/btnAgg"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivAggPic2"
        android:background="@drawable/photoboarder"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/ivAggPic1"
        android:layout_toEndOf="@+id/textView10" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/ibAggDelOne"
        android:background="@drawable/del"
        android:layout_alignTop="@+id/ivAggPic1"
        android:layout_alignEnd="@+id/ivAggPic1" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/ibAggDelTwo"
        android:layout_alignTop="@+id/ivAggPic2"
        android:layout_alignEnd="@+id/ivAggPic2"
        android:background="@drawable/del" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/ibAggDelThree"
        android:layout_alignTop="@+id/ivAggPic3"
        android:layout_alignEnd="@+id/ivAggPic3"
        android:background="@drawable/del" />
    </RelativeLayout>
</ScrollView>
</RelativeLayout>
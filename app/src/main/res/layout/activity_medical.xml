<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chengen.one.Medical"
    android:background="#303030"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etMedDes"
        android:gravity="center_vertical|start"
        android:background="@drawable/twolines"
        android:textSize="18sp"
        android:textColor="#FFFF"
                android:layout_below="@+id/tbMy"
                android:layout_marginTop="10dp"
                android:textAlignment="gravity"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/etMedURL"
        android:textSize="18sp"
        android:textColor="#FFFF"
        android:singleLine="true"
        android:background="@drawable/oneline"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:layout_below="@+id/etMedLocDes"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/ibMedMap" />

            <ToggleButton
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="New ToggleButton"
        android:id="@+id/tbMy"
        android:checked="false"
        android:textOff="Myself"
        android:textOn="Myself"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:background="@drawable/ripple_effect"
        android:layout_marginLeft="15dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="45dp" />

    <ToggleButton
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="Ohters"
        android:id="@+id/tbOther"
        android:checked="false"
        android:textOn="Others"
        android:textOff="Others"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:background="@drawable/ripple_effect"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp" />

            <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/etMedLocDes"
                android:textColor="#FFFF"
        android:singleLine="true"
        android:textSize="18sp"
                android:background="@drawable/oneline"
                android:layout_below="@+id/etMedDes"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/ibMedMap" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/ibMedMap"
        android:background="@drawable/marker"
        android:layout_above="@+id/etMedURL"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_below="@+id/etMedURL"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:id="@+id/linearLayout4">
                      <ImageView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/ivMedPic1"
                          android:background="@drawable/newboarderofphoto" />

                      <ImageView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/ivMedPic3"
                          android:background="@drawable/newboarderofphoto"
                          android:layout_marginLeft="5dp" />

                      <ImageView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/ivMedPic2"
                          android:background="@drawable/newboarderofphoto"
                          android:layout_marginLeft="5dp" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="SubMit"
                android:id="@+id/btnMed"
                android:background="@drawable/ripple_effect"
                android:textColor="#FFFF"
                android:textSize="22sp"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/linearLayout4"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

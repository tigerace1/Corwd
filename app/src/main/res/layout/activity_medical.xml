<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chengen.one.Medical"
    android:background="#303030">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medical"
        android:id="@+id/textView16"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f81616"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp" />

            <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etMedDes"
        android:gravity="center_vertical|start"
        android:background="@drawable/twolines"
        android:textSize="18sp"
        android:textColor="#FFFF"
                android:layout_below="@+id/tbMy"
                android:layout_marginTop="10dp"
                android:layout_alignEnd="@+id/ibMedMap"
                android:textAlignment="gravity"
                android:layout_alignStart="@+id/etMedLocDes" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/etMedURL"
        android:textSize="18sp"
        android:textColor="#FFFF"
        android:singleLine="true"
        android:background="@drawable/oneline"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:layout_below="@+id/etMedLocDes"
        android:layout_alignStart="@+id/btnMed" />

            <ToggleButton
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="New ToggleButton"
        android:id="@+id/tbMy"
        android:checked="false"
        android:textOff="Myself"
        android:textOn="Myself"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:background="@drawable/ripple_effect"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

    <ToggleButton
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="Ohters"
        android:id="@+id/tbOther"
        android:checked="false"
        android:textOn="Others"
        android:textOff="Others"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:background="@drawable/ripple_effect"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

            <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/etMedLocDes"
                android:layout_marginRight="15dp"
        android:textColor="#FFFF"
        android:singleLine="true"
        android:textSize="18sp"
                android:background="@drawable/oneline"
                android:layout_below="@+id/etMedDes"
                android:layout_alignStart="@+id/etMedURL"
                android:gravity="center_vertical"
                android:textAlignment="gravity" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:id="@+id/ibMedMap"
        android:background="@drawable/map"
        android:layout_alignTop="@+id/etMedLocDes"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="SubMit"
                android:id="@+id/btnMed"
                android:background="@drawable/ripple_effect"
                android:textColor="#FFFF"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/ivMedPic1"
                android:layout_marginTop="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp" />

            <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivMedPic1"
                android:background="@drawable/photoboarder"
                android:layout_below="@+id/etMedURL"
                android:layout_alignStart="@+id/etMedURL"
                android:layout_marginTop="15dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/ivMedPic3"
                android:background="@drawable/photoboarder"
                android:layout_marginLeft="15dp"
                android:layout_above="@+id/btnMed"
                android:layout_alignEnd="@+id/btnMed" />

            <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivMedPic2"
        android:background="@drawable/photoboarder"
                android:layout_marginLeft="15dp"
                android:layout_above="@+id/btnMed"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
